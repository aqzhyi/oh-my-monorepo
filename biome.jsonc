{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true, // Configure to `true`, replacing ESLint as the primary linter.
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessFragments": "off" // Set to `off`, because I tend to write code explicitly.
      },
      "style": {
        "all": true,
        "noDefaultExport": "off",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["camelCase", "PascalCase"]
          }
        }
      },
      "a11y": {
        "all": false
      }
    }
  },
  "javascript": {
    "globals": ["Astro"],
    "formatter": {
      // Set to `false` until biomejs can perfectly replace Prettier.
      // I particularly rely on prettier-plugin-jsdoc,
      // and I am still unclear about the rodemap for block comment in biomejs.
      "enabled": false,
      "indentStyle": "space",
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    }
  },
  "files": {
    "ignore": [
      "// ðŸ’¬ other",
      "**/.nvmrc",
      "**/.npmrc",

      "// ðŸ’¬ obviously no need",
      "**/*.bmp",
      "**/*.jpeg",
      "**/*.jpg",
      "**/*.map",
      "**/*.png",
      "**/*.webp",
      "**/.gitignore",
      "**/node_modules",
      "**/pnpm-lock.yaml",

      "// ðŸ’¬ that is bundles copied from charting_library",
      "**/charting*library/**/charting*library.js",
      "**/charting*library/**/charting*library.*.js",
      "**/charting*library/**/changelog.md",
      "**/charting*library/datafeeds/udf/lib",

      "// ðŸ’¬ bundles",
      "**/out",
      "**/bundles",
      "**/dist",
      "**/*.scss.d.ts",
      "**/*.swagger.*",
      "**/.astro",
      "**/.next",
      "**/.turbo",
      "**/.vercel"
    ]
  }
}
